# Bitcoin Core Configuration
BITCOIN_RPC_USER=btcuser
BITCOIN_RPC_PASSWORD=btcpass
BITCOIN_NETWORK=mainnet  # or testnet
BITCOIN_PRUNE=0  # 0 for full node, 550 for minimal pruning

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=bitcoin123
NEO4J_HEAP_SIZE=4G
NEO4J_PAGECACHE=2G

# Importer Configuration
IMPORT_START_BLOCK=0
IMPORT_BATCH_SIZE=100
IMPORT_MODE=continuous  # continuous or range

# BlockSci Configuration
BLOCKSCI_PARSER_THREADS=4

# GraphQL Configuration
GRAPHQL_PORT=8000
GRAPHQL_PLAYGROUND=true

# Storage Paths (optional - leave empty for Docker volumes)
# BITCOIN_DATA_PATH=/path/to/bitcoin/data
# NEO4J_DATA_PATH=/path/to/neo4j/data
# BLOCKSCI_DATA_PATH=/path/to/blocksci/data
